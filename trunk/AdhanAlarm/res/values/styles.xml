<?xml version="1.0" encoding="utf-8"?>
<resources>  
    <style name="AdhanAlarmTheme" parent="android:Theme">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:tileMode">repeat</item>
        <item name="android:listViewStyle">@style/listViewStyle</item>
    </style>
    
    <style name="tabWidgetStyle" parent="@android:style/Widget.TabWidget">
        <item name="android:background">@color/background_color</item>
    </style>
  
    <style name="RegularText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
	</style>
  
    <style name="RegularTextFinePrint" parent="@style/RegularText">
        <item name="android:textSize">12dip</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingLeft">4px</item> 
        <item name="android:paddingRight">4px</item>
        <item name="android:layout_gravity">center</item>
	</style>
  
    <style name="listViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@color/transparent</item>
	</style>
</resources>