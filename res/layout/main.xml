<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabs" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TabWidget android:id="@android:id/tabs"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<FrameLayout android:id="@android:id/tabcontent"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="65px">
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content1">
				<LinearLayout android:orientation="vertical"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content">
					<LinearLayout android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="10px">
							<TextView android:id="@+id/mark_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_sunrise"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_dhuhr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_asr"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_maghrib"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_ishaa"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_next_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content">
							<TextView
								android:layout_height="wrap_content" android:text="@string/fajr"
								android:layout_width="fill_parent" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content"
								android:text="@string/sunrise" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/dhuhr" android:layout_width="fill_parent" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content" android:text="@string/asr"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/maghrib"
								android:layout_width="fill_parent" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content"
								android:text="@string/ishaa" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/next_fajr"
								android:layout_width="fill_parent" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content">
							<TextView android:id="@+id/fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~"
								android:paddingLeft="5px" android:paddingRight="5px" />
							<TextView android:id="@+id/sunrise"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" android:paddingLeft="5px"
								android:paddingRight="5px" />
							<TextView android:id="@+id/dhuhr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~"
								android:paddingLeft="5px" android:paddingRight="5px" />
							<TextView android:id="@+id/asr"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" android:paddingLeft="5px"
								android:paddingRight="5px" />
							<TextView android:id="@+id/maghrib"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~"
								android:paddingLeft="5px" android:paddingRight="5px" />
							<TextView android:id="@+id/ishaa"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" android:paddingLeft="5px"
								android:paddingRight="5px" />
							<TextView android:id="@+id/next_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~"
								android:paddingLeft="5px" android:paddingRight="5px" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content">
							<TextView android:id="@+id/fajr_am_pm"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/sunrise_am_pm"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/dhuhr_am_pm"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/asr_am_pm"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/maghrib_am_pm"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/ishaa_am_pm"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/next_fajr_am_pm"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingTop="5px"
					android:paddingLeft="10px" android:paddingRight="10px">
					<ImageButton android:id="@+id/clear"
						android:src="@drawable/stop" android:layout_width="40px"
						android:layout_height="40px" />
					<ImageButton android:id="@+id/previous"
						android:src="@drawable/previous" android:layout_width="40px"
						android:layout_height="40px" />
					<ImageButton android:id="@+id/next"
						android:src="@drawable/next" android:layout_width="40px"
						android:layout_height="40px" />
				</LinearLayout>
				<TextView android:id="@+id/notes"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/introduction" />
			</LinearLayout>
		</ScrollView>
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content2">
				<LinearLayout android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<LinearLayout android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:paddingLeft="5px"
						android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/latitude" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/longitude" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/qibla" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<TextView android:id="@+id/current_latitude_deg"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView
							android:id="@+id/current_longitude_deg"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView android:id="@+id/current_qibla_deg"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:paddingLeft="5px"
						android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="°" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="°" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="°" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content">
						<TextView android:id="@+id/current_latitude_min"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView
							android:id="@+id/current_longitude_min"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView android:id="@+id/current_qibla_min"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:paddingLeft="5px"
						android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="'" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="'" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="'" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content">
						<TextView android:id="@+id/current_latitude_sec"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView
							android:id="@+id/current_longitude_sec"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
						<TextView android:id="@+id/current_qibla_sec"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right" android:text="~" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:paddingLeft="5px"
						android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="''" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="''" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:text="''" />
					</LinearLayout>
				</LinearLayout>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/compass_disclaimer" />
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_gravity="center_horizontal|center_vertical">
					<islam.adhanalarm.QiblaCompassView
						android:layout_width="240px" android:layout_height="240px"
						android:id="@+id/qibla_compass" />
				</LinearLayout>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/bearing_north" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/bearing_qibla" />
			</LinearLayout>
		</ScrollView>
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content3">
				<TextView android:id="@+id/display_time_zone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<LinearLayout android:orientation="vertical"
						android:layout_height="fill_parent"
						android:layout_width="wrap_content" android:paddingRight="5px"
						android:paddingLeft="5px">
						<TextView android:text="@string/latitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/longitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/altitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/notification" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/extra_alerts" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/calculation" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/pressure"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/temperature"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/rounding" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<Button android:id="@+id/reset_settings"
							android:text="@string/reset"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<LinearLayout android:orientation="horizontal"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent">
							<LinearLayout android:orientation="vertical"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content" android:layout_weight="1">
								<LinearLayout
									android:orientation="horizontal"
									android:layout_height="wrap_content"
									android:layout_width="fill_parent">
									<EditText android:id="@+id/latitude"
										android:text="43.67" android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:numeric="signed|decimal" android:singleLine="true" />
								</LinearLayout>
								<LinearLayout
									android:orientation="horizontal"
									android:layout_height="wrap_content"
									android:layout_width="fill_parent">
									<EditText
										android:id="@+id/longitude" android:text="-79.4167"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:numeric="signed|decimal" android:singleLine="true" />
								</LinearLayout>
							</LinearLayout>
							<Button android:id="@+id/lookup_gps"
								android:text="@string/lookup_gps"
								android:layout_width="wrap_content"
								android:layout_height="fill_parent" />
						</LinearLayout>
						<EditText android:id="@+id/altitude"
							android:text="0" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" android:singleLine="true" />
						<Spinner android:id="@+id/notification_methods"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<Spinner android:id="@+id/extra_alerts"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<Spinner android:id="@+id/calculation_methods"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<EditText android:id="@+id/pressure"
							android:text="1010" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" android:singleLine="true" />
						<EditText android:id="@+id/temperature"
							android:text="10" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" android:singleLine="true" />
						<Spinner android:id="@+id/rounding_types"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<Button android:id="@+id/save_and_apply_settings"
							android:text="@string/save_and_apply"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</FrameLayout>
</TabHost>