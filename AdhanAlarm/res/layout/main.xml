<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabs" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TabWidget android:id="@android:id/tabs"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<FrameLayout android:id="@android:id/tabcontent"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="65px">
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content1">
				<LinearLayout android:orientation="vertical"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content">
					<LinearLayout android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:paddingLeft="20px">
						<ImageButton android:id="@+id/previous"
							 android:src="@drawable/previous"
							 android:layout_width="30px" android:layout_height="30px" />
						<ImageButton android:id="@+id/next"
							 android:src="@drawable/next"
							 android:layout_width="30px" android:layout_height="30px" />
						<ImageButton android:id="@+id/clear"
							 android:src="@drawable/stop"
							 android:layout_width="30px" android:layout_height="30px" />
					</LinearLayout>
					<LinearLayout android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:paddingRight="5px">
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="10px">
							<TextView android:id="@+id/mark_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_sunrise"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_dhuhr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_asr"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_maghrib"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
							<TextView android:id="@+id/mark_ishaa"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:background="#FFFF00" android:layout_width="fill_parent" />
							<TextView android:id="@+id/mark_next_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content">
							<TextView
								android:layout_height="wrap_content" android:text="@string/fajr"
								android:layout_width="fill_parent" android:paddingRight="5px" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content"
								android:text="@string/sunrise" android:background="#FFFF00"
								android:layout_width="fill_parent" android:paddingRight="5px" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/dhuhr" android:layout_width="fill_parent"
								android:paddingRight="5px" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content" android:text="@string/asr"
								android:background="#FFFF00" android:layout_width="fill_parent"
								android:paddingRight="5px" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/maghrib"
								android:layout_width="fill_parent" android:paddingRight="5px" />
							<TextView android:textColor="#000000"
								android:layout_height="wrap_content"
								android:text="@string/ishaa" android:background="#FFFF00"
								android:layout_width="fill_parent" android:paddingRight="5px" />
							<TextView
								android:layout_height="wrap_content"
								android:text="@string/next_fajr"
								android:layout_width="fill_parent" android:paddingRight="5px" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content">
							<TextView android:id="@+id/fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/sunrise"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/dhuhr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/asr"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/maghrib"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/ishaa"
								android:textColor="#000000" android:layout_height="wrap_content"
								android:text="~" android:background="#FFFF00"
								android:layout_width="fill_parent" />
							<TextView android:id="@+id/next_fajr"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" android:text="~" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:id="@+id/notes"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="@string/introduction" />
					<LinearLayout android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<LinearLayout android:orientation="vertical"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="5px">
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/latitude" />
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/longitude" />
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/qibla" />
						</LinearLayout>
						<LinearLayout android:orientation="vertical"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<TextView android:id="@+id/current_latitude"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:text="~" />
							<TextView
								android:id="@+id/current_longitude"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:text="~" />
							<TextView android:id="@+id/current_qibla"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:text="~" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content2">
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<LinearLayout android:orientation="vertical"
						android:layout_height="fill_parent"
						android:layout_width="wrap_content" android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/notification" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/extra_alerts" android:layout_weight="1"
							android:gravity="fill_vertical" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<Spinner android:id="@+id/notification_methods"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<Spinner android:id="@+id/extra_alerts"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
					</LinearLayout>
				</LinearLayout>
				<Button android:id="@+id/save_and_apply_alert"
					android:text="@string/save_and_apply_alert"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" />
			</LinearLayout>
		</ScrollView>
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content3">
				<TextView android:id="@+id/display_time_zone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<LinearLayout android:orientation="vertical"
						android:layout_height="fill_parent"
						android:layout_width="wrap_content" android:paddingRight="5px">
						<TextView android:text="@string/latitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/longitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<LinearLayout android:orientation="horizontal"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent">
							<LinearLayout android:orientation="vertical"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content" android:layout_weight="1">
								<LinearLayout
									android:orientation="horizontal"
									android:layout_height="wrap_content"
									android:layout_width="fill_parent">
									<EditText android:id="@+id/latitude"
										android:text="43.67" android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:numeric="signed|decimal" />
								</LinearLayout>
								<LinearLayout
									android:orientation="horizontal"
									android:layout_height="wrap_content"
									android:layout_width="fill_parent">
									<EditText
										android:id="@+id/longitude" android:text="-79.4167"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:numeric="signed|decimal" />
								</LinearLayout>
							</LinearLayout>
							<Button android:id="@+id/lookup_gps"
								android:text="@string/lookup_gps"
								android:layout_width="wrap_content"
								android:layout_height="fill_parent" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<Button android:id="@+id/save_and_apply_place"
					android:text="@string/save_and_apply_place"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" />
			</LinearLayout>
		</ScrollView>
		<ScrollView android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/content4">
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<LinearLayout android:orientation="vertical"
						android:layout_height="fill_parent"
						android:layout_width="wrap_content" android:paddingRight="5px">
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/calculation" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/rounding" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/pressure"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/temperature"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
						<TextView android:text="@string/altitude"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_weight="1"
							android:gravity="fill_vertical" />
					</LinearLayout>
					<LinearLayout android:orientation="vertical"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent">
						<Spinner android:id="@+id/calculation_methods"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<Spinner android:id="@+id/rounding_types"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:drawSelectorOnTop="true" />
						<EditText android:id="@+id/pressure"
							android:text="1010" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" />
						<EditText android:id="@+id/temperature"
							android:text="10" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" />
						<EditText android:id="@+id/altitude"
							android:text="0" android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:numeric="signed|decimal" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<Button android:id="@+id/reset_extra"
						android:text="@string/reset_extra"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent" />
					<Button android:id="@+id/save_and_apply_extra"
						android:text="@string/save_and_apply_extra"
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</FrameLayout>
</TabHost>